<?xml version="1.0"?> 
<project name="JavaII" default="compile" basedir=".">
<property environment="env"/>
<property name="Assignment1" value="assignment1" />
<property name="Assignment2" value="assignment2" />
<property name="Assignment3" value="assignment3" />
<property name="Assignment4" value="assignment4" />
<property name="Assignment5" value="assignment5" />
<property name="Creator" value="Brent-Burbidge" />
<property name="src" value="${basedir}/src" />
<property name="bin" value="${basedir}/bin" />
<property name="lib" value="${basedir}/lib" />
<property name="doc" value="${basedir}/doc" />

<property name="build" value="${basedir}/build" />
<target name="prepare"
description="Setting up temporary directory to support build.">
<mkdir dir="${build}"/>
<mkdir dir="${build}/${Assignment1}"/>
<mkdir dir="${build}/${Assignment2}"/>
<mkdir dir="${build}/${Assignment3}"/>
<mkdir dir="${build}/${Assignment4}"/>
<mkdir dir="${build}/${Assignment5}"/>
<mkdir dir="${bin}"/>
</target>
<target name="compile" depends="prepare">
<javac includeantruntime="false" srcdir="${src}/${Assignment1}" destdir="${build}" 
includes="**/*.java" excludes="**/*Test*" listfiles="yes">
</javac>
<javac includeantruntime="false" srcdir="${src}/${Assignment2}" destdir="${build}" 
includes="**/*.java" excludes="**/*Test*" listfiles="yes">
</javac>
<javac includeantruntime="false" srcdir="${src}/${Assignment3}" destdir="${build}" 
includes="**/*.java" excludes="**/*Test*" listfiles="yes">
</javac>
<javac includeantruntime="false" srcdir="${src}/${Assignment4}" destdir="${build}" 
includes="**/*.java" excludes="**/*Test*" listfiles="yes">
</javac>
<javac includeantruntime="false" srcdir="${src}/${Assignment5}" destdir="${build}" 
includes="**/*.java" excludes="**/*Test*" listfiles="yes">
</javac>
</target>


<target name="compileAssignment1" depends="prepare">
<javac includeantruntime="false" srcdir="${src}/${Assignment1}" destdir="${build}" 
includes="**/*.java" excludes="**/*Test*" listfiles="yes">
</javac>
</target>

<target name="compileAssignment2" depends="prepare">
