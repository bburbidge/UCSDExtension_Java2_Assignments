</javac>
</target>

<target name="compileAssignment5" depends="prepare">
<javac includeantruntime="false" srcdir="${src}/${Assignment5}" destdir="${build}" 
includes="**/*.java" excludes="**/*Test*" listfiles="yes">
</javac>
</target>

<target name="deploy" depends="compile">
<jar destfile="${bin}/${Assignment1}-by-${Creator}.jar"
basedir="${build}/${Assignment1}"/>
<jar destfile="${bin}/${Assignment2}-by-${Creator}.jar"
basedir="${build}/${Assignment2}"/>
<jar destfile="${bin}/${Assignment3}-by-${Creator}.jar"
basedir="${build}/${Assignment3}"/>
<jar destfile="${bin}/${Assignment4}-by-${Creator}.jar"
basedir="${build}/${Assignment4}"/>
<jar destfile="${bin}/${Assignment5}-by-${Creator}.jar"
basedir="${build}/${Assignment5}"/>
</target>

<target name="deployAssignment1" depends="compile">
<jar destfile="${bin}/${Assignment1}-by-${Creator}.jar"
basedir="${build}/${Assignment1}"/>
</target>

<target name="deployAssignment2" depends="compile">
<jar destfile="${bin}/${Assignment2}-by-${Creator}.jar"
basedir="${build}/${Assignment2}"/>
</target>

<target name="deployAssignment3" depends="compile">
<jar destfile="${bin}/${Assignment3}-by-${Creator}.jar"
basedir="${build}/${Assignment3}"/>
</target>

<target name="deployAssignment4" depends="compile">
<jar destfile="${bin}/${Assignment4}-by-${Creator}.jar"
basedir="${build}/${Assignment4}"/>
</target>

<target name="deployAssignment5" depends="compile">
<jar destfile="${bin}/${Assignment5}-by-${Creator}.jar"
basedir="${build}/${Assignment5}"/>
</target>

<target name ="cleanBuild">
<delete includeEmptyDirs="true" verbose="true">
<fileset dir="${basedir}">
<include name="build/**" />
</fileset>
</delete>
</target>

<target name ="cleanBin">
<delete includeEmptyDirs="true" verbose="true">
<fileset dir="${basedir}">
    <include name="bin" />
    </fileset>
</delete>
</target>

<target name ="cleanAll">
<delete includeEmptyDirs="true" verbose="true">
<fileset dir="${basedir}">
    <include name="bin" />
    <include name="build/**" />
    </fileset>
</delete>
</target>
</project>